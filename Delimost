//Делимость
program Delimost;
uses crt;
var 
  number: integer; 
  sNumber: string;
begin
  crt.SetWindowTitle('Делимость чисел');
  while true do
    begin
      repeat
        TextColor(LightGreen);
        Print('Введите число:');
        TextColor(Yellow);
        number := ReadInteger;
        if (number = 0) then exit;
      until (number >= 1);
    for var i := 2 to 31 do //
      begin
        if (number mod i = 0) then
          begin
            TextColor(Yellow);
            sNumber := 'Число делится на ';
          end else
            begin
              TextColor(LightRed);
              sNumber := 'Число не делится на ';
            end;
         if (i < 10) then sNumber += ' ';
         Println(sNumber + i.ToString)
      end;
    end;
end.
